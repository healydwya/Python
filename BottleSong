import random
while (True):
    number = random.randint(1,5)

    print "Hello, welcome to magic 8 ball world! Type QUIT to exit the game. "
    print "Ask the magic 8 ball a question: "
    question = raw_input("Hello, what is your question: ")
    if (question == "QUIT"):
        break

    print "I am thinking...."   
    if (number == 1):
        print "You should go with your gut."
    if (number == 2):
        print "The vision is hazy."
    if (number == 3):
        print "I am unsure."
    if (number == 4):
        print "You are very certain in your decision already."
    if (number == 5):
        print "Only time will tell."
